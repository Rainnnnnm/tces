            <!--<mvc:mapping path="/**"/>-->
            <!--<bean class="com.gcxy.tces.common.interceptor.AuthInterceptor"/>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->

</beans>